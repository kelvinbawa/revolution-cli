{
	"compilerOptions": {
		"target": "es5",
		"module": "ESNext",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"skipLibCheck": false
		// "resolveJsonModule": true
	},
	"include": ["/**/*.ts"],
	"exclude": ["node_modules"],
	"ts-node": {
		"esm": true
	}
}
